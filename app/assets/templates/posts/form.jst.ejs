<h2><%= post.id ? 'Edit' : 'Create' %></h2>

<form>
	<label for="post_title">Title</label>
	<input type="text" name="post[title]"
											value="<%= post.id ? post.get('title') : '' %>"
											id="post_title">
	<label for="post_body">Body</label>
	<input type="text" name="post[body]"
											value="<%= post.id ? post.get('body') : '' %>"
											id="post_body">


	<p><button class="submit"><%= post.id ? 'Edit' : 'Create' %></button></p>
</form>